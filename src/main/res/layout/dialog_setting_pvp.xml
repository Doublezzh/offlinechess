<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="818dp"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/setting_ll"
        android:layout_width="818dp"
        android:layout_height="403dp"
        android:layout_below="@+id/textView3"
        android:layout_centerInParent="true"
        android:background="@mipmap/chess_dialog_bg"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="90dp"

            android:layout_marginRight="72dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/zyhei"
                android:text="音乐"
                android:textColor="@color/white"
                android:textSize="40sp" />

            <com.suke.widget.SwitchButton
                android:id="@+id/musicSwitch"
                android:layout_width="80dp"
                android:layout_height="43dp"
                app:sb_background="@color/switchbutton"
                app:sb_border_width="5dp"
                app:sb_button_color="#fff"
                app:sb_checked_color="#43C8FF"
                app:sb_show_indicator="false" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="72dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/zyhei"
                android:text="音效"
                android:textColor="@color/white"
                android:textSize="40sp" />

            <com.suke.widget.SwitchButton
                android:id="@+id/wrapSwitch"
                android:layout_width="80dp"
                android:layout_height="43dp"
                app:sb_background="@color/switchbutton"
                app:sb_border_width="5dp"
                app:sb_button_color="#fff"
                app:sb_checked_color="#43C8FF"
                app:sb_show_indicator="false"
                app:sb_uncheckcircle_width="0dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="72dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/zyhei"
                android:text="棋盘方向"
                android:textColor="@color/white"
                android:textSize="40sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:background="@drawable/backgrounda"
                android:orientation="horizontal"
                android:padding="3dp">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/level_invert"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#00000000"
                    android:fontFamily="@font/zyhei"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    app:tabBackground="@drawable/tab_background"
                    app:tabIndicator="@null"
                    app:tabIndicatorColor="#fff"
                    app:tabMode="fixed"
                    app:tabSelectedTextColor="@color/black"
                    app:tabTextColor="@color/white" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:fontFamily="@font/zyhei"
        android:text="游戏设置"
        android:textColor="@color/white"
        android:textSize="56sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_ll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-63dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/negBtn"
            android:layout_width="220dp"
            android:layout_height="92dp"
            android:background="@drawable/chess_selector_btn1"
            android:fontFamily="@font/zyhei"
            android:soundEffectsEnabled="false"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <Space
            android:layout_width="100dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/posBtn"
            style="@null"
            android:layout_width="220dp"
            android:layout_height="92dp"
            android:background="@drawable/chess_selector_btn1"
            android:fontFamily="@font/zyhei"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="40sp" />
    </LinearLayout>

</RelativeLayout>